{
  "compilerOptions": {
    "target": "ES2021",                    
    "module": "CommonJS",                  
    "moduleResolution": "node",            
    "strict": true,                        
    "esModuleInterop": true,               
    "skipLibCheck": true,                  
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "declaration": true,
    },
  "include": [
     "packages/*/src/**/*",
     "packages/*/src/**/*.json",
     "packages/*/src/types/custom-modules.d.ts"
  ],
  "exclude": ["node_modules", "packages/*/dist"]
}
