{
  "name": "@b2b/backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch src --exec ts-node src/index.ts",
    "build": "echo 'üî® Building TypeScript...' && tsc -b && echo '‚úÖ Build completed successfully!'",
    "build:verbose": "echo 'üî® Building TypeScript with verbose output...' && tsc -b --verbose && echo '‚úÖ Build completed successfully!'",
    "build:check": "echo 'üîç Type checking without compilation...' && tsc --noEmit && echo '‚úÖ Type check passed!'",
    "build:clean": "echo 'üßπ Cleaning dist folder...' && rimraf dist && echo 'üî® Building TypeScript...' && tsc -b && echo '‚úÖ Clean build completed!'",
    "build:verify": "node scripts/verify-build.js",
    "build:full": "npm run build && npm run build:verify",
    "build:stats": "node scripts/build-stats.js",
    "build:render": "npm install --include=optional --legacy-peer-deps && npm run build",
    "postinstall": "npm rebuild sharp",
    "type-check": "tsc --noEmit",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "lint": "eslint 'src/**/*.ts'",
    "test": "jest --coverage --config jest.config.js",
    "test:unit": "cross-env TEST_TYPE=unit jest --testPathPatterns=__tests__ --config jest.config.js",
    "test:integration": "cross-env TEST_TYPE=integration jest --testPathPatterns=integration --config jest.config.js",
    "test:auth": "cross-env TEST_TYPE=unit jest --testPathPatterns=auth --config jest.config.js",
    "test:sanitization": "cross-env TEST_TYPE=unit jest --testPathPatterns=sanitizer --config jest.config.js",
    "test:watch": "jest --watch --config jest.config.js",
    "test:coverage": "jest --coverage --config jest.config.js",
    "test:e2e": "powershell -ExecutionPolicy Bypass -File test-backend-comprehensive.ps1",
    "test:all": "powershell -ExecutionPolicy Bypass -File run-tests.ps1 -TestType all",
    "test:backend": "jest --config packages/backend/jest.config.js",
    "migrate:logging": "node src/utils/migrate-logging.js",
    "logging:setup": "npm run migrate:logging && echo '‚úÖ Structured logging migration completed!'",
    "db:ops": "ts-node src/scripts/databaseOpsPlaybook.ts",
    "db:drift": "ts-node src/scripts/verifySchemaDrift.ts"
  },
